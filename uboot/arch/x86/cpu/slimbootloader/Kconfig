config SYS_SLIMBOOTLOADER
	bool
	select USE_HOB
	imply SYS_NS16550
	imply AHCI_PCI
	imply SCSI
	imply SCSI_AHCI
	imply MMC
	imply MMC_PCI
	imply MMC_SDHCI
	imply MMC_SDHCI_SDMA
	imply USB
	imply USB_EHCI_HCD
	imply USB_XHCI_HCD
	imply E1000
	imply X86_TSC_READ_BASE
