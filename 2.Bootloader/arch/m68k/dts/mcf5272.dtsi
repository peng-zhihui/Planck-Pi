/ {
	compatible = "fsl,mcf5272";

	aliases {
		serial0 = &uart0;
		fec0 = &fec0;
	};

	soc {
		compatible = "simple-bus";
		#address-cells = <1>;
		#size-cells = <1>;

		mbar: mbar@10000000 {
			compatible = "simple-bus";
			#address-cells = <1>;
			#size-cells = <1>;
			ranges = <0x00000000 0x10000000 0x10000>;
			reg = <0x10000000 0x10000>;

			uart0: uart@100 {
				compatible = "fsl,mcf-uart";
				reg = <0x100 0x40>;
				status = "disabled";
			};

			uart1: uart@140 {
				compatible = "fsl,mcf-uart";
				reg = <0x140 0x40>;
				status = "disabled";
			};

			fec0: ethernet@840 {
				compatible = "fsl,mcf-fec";
				reg = <0x840 0x400>;
				mii-base = <0>;
				max-speed = <100>;
				timeout-loop = <50000>;
				status = "disabled";
			};
		};
	};
};
